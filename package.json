{
  "name": "vue_vite_electron",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "electron:serve": "concurrently -k \"npm run dev\" \"npm run start\"",
    "electron:build": "vite build && electron-builder",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "wait-on tcp:5173 && cross-env NODE_ENV=development electron . --watch ./ --ext .js,.html,.css,.vue",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "dayjs": "^1.11.10",
    "electron-win-state": "^1.1.22",
    "element-plus": "^2.4.2",
    "lodash": "^4.17.21",
    "mitt": "^3.0.1",
    "nanoid": "^3.3.6",
    "node-xlsx": "^0.23.0",
    "pinia": "^2.1.7",
    "vite-plugin-optimizer": "^1.4.2",
    "vue": "^3.3.4",
    "vue-toastification": "^2.0.0-rc.5",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "sass": "^1.69.4",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.4.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "productName": "Electron + Vue3 开发桌面应用",
    "copyright": "Copyright © year",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "mac": {
      "category": "public.app.category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
